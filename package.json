{
	"name": "automagedev",
	"displayName": "AutoMageDev",
	"description": "Advanced autocomplete support for Magento 2.",
	"version": "1.0.2",
	"publisher": "Webkul",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.18.0"
	},
	"keywords": [
		"magento",
		"magento2",
		"autocompletion",
		"snippet",
		"webkul"
	],
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:php",
		"onLanguage:xml",
		"onCommand:automagedev.m2autoSuggest",
		"onCommand:automagedev.generateModule"
	],
	"main": "./webkul.js",
	"contributes": {
		"commands": [
			{
				"command": "automagedev.m2autoSuggest",
				"title": "Update magento namespaces"
			},
			{
				"command": "automagedev.generateModule",
				"title": "Magento 2 Module Generation"
			}
		],
		"snippets": [
			{
				"language": "php",
				"path": "./features/files/phpsnippets.json"
			},
			{
				"language": "php",
				"path": "./features/files/magento.json"
			},
			{
				"language": "xml",
				"path": "./features/files/xmlsnippets.json"
			},
			{
				"language": "xml",
				"path": "./features/files/magento.json"
			}
		]
	},
	"devDependencies": {
		"@types/vscode": "^1.18.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"find": "^0.3.0"
	}
}
